<div class="container">
  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          {{input value=headline id="headline" class="validate"}}
          <label for="headline">Article Title</label>
        </div>
        <div class="input-field col s6">
          {{input value=author id="author" class="validate"}}
          <label for="author">Author</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{input value=date id="date" class="validate"}}
          <label for="date">Published On</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{input value=excerpt id="excerpt" class="validate"}}
          <label for="excerpt"> Card Excerpt</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{input value=photo id="photo" class="validate"}}
          <label for="photo">Article Photo</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{input value=body id="body" class="validate"}}
          <label for="body">Article Body</label>
        </div>
      </div>
      <button {{action 'saveArticle'}} class="btn">Submit</button>
    </form>
  </div>
</div>
